<!DOCTYPE html>
<html>
  <head>
    <title>Vocanta Chat</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font: 13px Helvetica, Arial; }
        form { background: #fff; padding: 3px; position: fixed; bottom: 0; width: 100%; border-color:rgb(84, 9, 109); border-top-style: solid; border-top-width: 1px;}
        form input { border-style: solid; border-color: rgb(84, 9, 109); border-width: 1px; padding: 10px; width: 85%; margin-right: .5%; }
        form button { width: 60px; color: #ebca69; background: rgb(84, 9, 109); border: none; padding: 10px; margin-left: 2%; }
        #messages { list-style-type: none; margin: 0; padding: 0; }
        #messages li { padding: 5px 10px; }
        #messages li:nth-child(odd) { background: #eee; }
    </style>
    <script src="<%=process.env.URL_PREFIX%>/socket.io/socket.io.js"></script>
    <script src="<%=process.env.URL_PREFIX%>/jquery/jquery.js"></script>
  </head>

  <body>
    <ul id="messages"></ul>
    <form action="/" method="POST" id="chatForm">
      <input id="txt" autocomplete="off" autofocus="on" placeholder="hier schreiben..." /><button>Senden</button>
    </form>
    <script>
            var socket = io.connect('<%=process.env.SOCKET_URL%>', {
              //path: '<%=process.env.URL_PREFIX%>/socket.io',
              path: '/socket.io',
              transports: ['websocket']
            });

            // submit text message without reload/refresh the page
            $('form').submit(function(e){
                e.preventDefault(); // prevents page reloading
                socket.emit('chat_message', $('#txt').val());
                $('#txt').val('');
                return false;
            });

            // append the chat text message
            socket.on('chat_message', function(msg){
                $('#messages').append($('<li>').html(msg));
            });

            // append text if someone is online
            socket.on('is_online', function(username) {
                $('#messages').append($('<li>').html(username));
            });

            // ask username
            var username = prompt('Wer bist du?');
            if(!username) username='jemand';
            socket.emit('username', username);

    </script>
  </body>
</html>